plugin.tx_taste {
	view {
		partialRootPaths.0 = EXT:taste/Resources/Private/Partials/
		partialRootPaths.1 = {$plugin.tx_taste.view.partialRootPath}

		templateRootPaths.0 = EXT:taste/Resources/Private/Templates/
		templateRootPaths.1 = {$plugin.tx_taste.view.templateRootPath}

		layoutRootPaths.0 = EXT:taste/Resources/Private/Layouts/
		layoutRootPaths.1 = {$plugin.tx_taste.view.layoutRootPath}
	}
	persistence {
		storagePid = {$plugin.tx_taste.persistence.storagePid}
		#recursive = 1
	}
	features {
		#skipDefaultArguments = 1
		# if set to 1, the enable fields are ignored in BE context
		ignoreAllEnableFieldsInBe = 0
	}
	mvc {
		#callDefaultActionIfActionCantBeResolved = 1
	}
}